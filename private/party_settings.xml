<?xml version="1.0" encoding="UTF-8" ?>
<div>
	<h1>Party Settings</h1>
	<div class="oneline half">
		<h2>Code</h2>
		<input disabled="" value="{{ partyCode }}" />
	</div>

	<div class="oneline half">
		<h2>
			Max groups:
			<span id="nGroups">{{ maxGroups }}</span>
		</h2>
		<input
      type="range"
      id="maxGroups"
      value="{{ maxGroups }}"
      min="1"
      max="11"
      step="1"
    />
	</div>

	<div class="oneline half">
		<button class="green" id="myPlaylists">My playlists</button>
		<button id="newPlaylist">New playlist</button>
	</div>

	<div class="playlist" id="my-playlists">
		<h2>Play my playlists</h2>
		<input type="text" placeholder="Search..." />
		<select>
			<option>Soirée Halloween entre potes</option>
			<option>Kot à projet jeudi soir</option>
			<option>Scouts 13/10/2020 activité</option>
		</select>
	</div>

	<div class="playlist hide" id="new-playlist">
		<h2>Create new playlist</h2>
		<select data-selected="{{ category }}">
			<option>Culture</option>
			<option>Action</option>
			<option>Reflexion</option>
			<option>Sport</option>
			<option>Truth</option>
			<option>Game</option>
			<option>Constraint</option>
		</select>
	</div>

	<div class="oneline half">
		<h2>
			Max games:
			<span id="nGames">{{ maxGames }}</span>
		</h2>
		<input
      type="range"
      id="maxGames"
      value="{{ maxGames }}"
      min="1"
      max="26"
      step="1"
    />
	</div>

	<button id="save-settings">Save</button>
</div>
